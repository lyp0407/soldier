/* pages/login/login.wxss */
.head{
  width: 100%;
  height: 100px;
}
.head image{
  width:80px;
  height: 80px;
  border-radius: 50%;
  margin-left: 40px;
}

.main{
  display: block;
  width: 80%;
  height: 120px;
  margin: 10px auto;
}

.name,
.Invitation,
.tel{
  motion:  0 auto;
  margin: 12px 0;
}

.name input,
.Invitation input,
.tel input{
  height: 30px;
  text-align: center;
  font-size: 14px;
  padding: 2px 0;
  border-radius: 5px;
  margin: 5px 0;
  border: 1px solid #eeeeee;
}

.but{
  margin-top: 100px;
}

/* 欢迎页 */
.container{
  width: 100%;
  height: 100vh;
  margin: 0;
  padding: 0;
  position: relative;
}
.bjt{
  position: absolute;
  width: 100%;
  height: 100vh;
}
.box{
  position: absolute;
  z-index: 1;
}

.hylogo{
  display: block;
  margin: 50% auto;
  width: 200px;
  height: 150px;
}

.hybut{
  margin-top: 150px;
  background: #F4F4F4;
  color: #233865;
  border-radius: 15px;
}